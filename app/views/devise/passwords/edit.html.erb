<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "well" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.input :password %><br />
  </div>
  <div>
  <%= f.input :password_confirmation %></div>

  <div><%= f.button :submit, "Change my password" %></div>
<% end %>

<%= render "devise/shared/links" %>
